#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
if [ -f "$SCRIPT_DIR/librarian.rb" ]; then
  cd "$SCRIPT_DIR"
elif [ -f "$SCRIPT_DIR/media_librarian/librarian.rb" ]; then
  cd "$SCRIPT_DIR/media_librarian"
else
  echo "librarian.rb not found." >&2
  exit 1
fi

ruby "$PWD/librarian.rb" "$@"
