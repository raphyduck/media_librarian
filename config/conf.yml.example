---
preferred_languages: fr en
daemon:
  workers_pool_size: 4
  queue_slots: 4 # Deprecated; the worker queue is unbounded.
  finished_jobs_per_queue: 100 # Keep the last 100 finished/failed/cancelled jobs per queue in memory (0 disables history).
deluge:
  host: host
  username: username
  password: password
  remove_on_completion: 1
  max_download_rate: 4000 #In kbps
  min_torrent_free_space: 10
  default_seed_time: 1
email:
  host: host
  port: 587
  domain: example.com
  username: username
  password: pwd
  auth_type: plain
  open_timeout: 30  # SMTP connection timeout in seconds (default: 30)
  read_timeout: 60  # SMTP read timeout in seconds (default: 60)
  notification_from: noreply@sender.com
  notification_to: noreply@recipient.com
  notification_cc: ''
  notification_bcc: ''
ffmpeg_settings:
  crf: 22
  preset: medium
calendar:
  refresh_every: 12 hours
  refresh_on_start: true
  window_past_days: 60
  window_future_days: 365
  refresh_limit: 200
  providers: imdb|trakt|tmdb
# sqlite:
#   auto_repair_on_corruption: true
# imdb:
#   enabled: false # Optional toggle; remove or set to false to disable the IMDb feed
kodi:
  host: http://host:port
  username: username
  password: password
trakt:
  account_id: account_id # Used for metadata lookups; list automation is retired
  client_id: client_id
  client_secret: client_secret
  ca_path: /path/to/ca-certificates # Optional override; defaults to system trust store
  enable_crl_checks: false # Opt-in CRL checking; will fall back if unsupported
  disable_crl_checks: false # Legacy override to forcefully disable CRL checks
tmdb:
  api_key: api_key
tvdb:
  api_key: api_key
omdb:
  api_key: api_key
